# App
NODE_ENV=development
APP_NAME=your-app-name
PORT=3000
API_KEY=your-api-key-here
API_SECRET=your-api-secret-here
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=1d

# Database
# Supported types: postgres, mysql, mariadb, sqlite, mssql, oracle, cockroachdb, etc.
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your-password-here
DB_NAME=your_database_name
# DB_SSL: Habilita SSL para la conexión a la base de datos
# true: Usa SSL (requerido para bases de datos en la nube como AWS RDS, Heroku, etc.)
# false: Sin SSL (para desarrollo local)
DB_SSL=false

# Seguridad
ALLOWED_ORIGINS=http://localhost:3000,https://tudominio.com
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=7d

# Performance
CACHE_TTL=300
CACHE_MAX_ITEMS=100
CLUSTER_WORKERS=auto

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD: Contraseña de Redis (dejar vacío si Redis no requiere autenticación)
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
CACHE_ENABLED=true

# Database Pool
DB_POOL_SIZE=10
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000

# Rate Limiting
THROTTLE_TTL=60000                      # TTL en milisegundos (60000 = 1 minuto)
THROTTLE_LIMIT=100                      # Límite global de requests por TTL
THROTTLE_LOGIN_LIMIT=5                  # Límite estricto para login (protección brute force)
THROTTLE_FORGOT_PASSWORD_LIMIT=3        # Límite para forgot password (muy restrictivo)
THROTTLE_TICKET_SCAN_LIMIT=10           # Límite para escaneo de tickets (previene escaneos accidentales repetidos)

# Super Admin User (Para seeder inicial - solo uno en todo el sistema)
SUPER_ADMIN_EMAIL=superadmin@eventpass.com
SUPER_ADMIN_PASSWORD=SuperAdmin123!@#
SUPER_ADMIN_FIRST_NAME=Super
SUPER_ADMIN_LAST_NAME=Admin

# Email Configuration (SMTP)
# Para Gmail: Requiere App Password (no tu contraseña normal)
# 1. Habilita 2FA en tu cuenta Google
# 2. Ve a https://myaccount.google.com/apppasswords
# 3. Genera un App Password y úsalo abajo (16 caracteres SIN espacios)
EMAIL_SMTP_HOST=smtp.gmail.com
# Puertos comunes:
# - 587: STARTTLS (recomendado) - usar EMAIL_SMTP_SECURE=false
# - 465: SSL/TLS directo - usar EMAIL_SMTP_SECURE=true
# - 25: Sin encriptación (no recomendado)
EMAIL_SMTP_PORT=587
# EMAIL_SMTP_SECURE:
# - false: Para puerto 587 (STARTTLS)
# - true: Para puerto 465 (SSL/TLS directo)
EMAIL_SMTP_SECURE=false
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASS=abcdefghijklmnop
EMAIL_FROM_NAME=EventPass
EMAIL_FROM_ADDRESS=noreply@eventpass.com
# Información de la aplicación para templates de email
EMAIL_APP_NAME=EventPass
EMAIL_SUPPORT_EMAIL=support@eventpass.com

# Frontend URL (para links en emails)
FRONTEND_URL=http://localhost:3001

# Swagger
SWAGGER_TITLE=Your API Title
SWAGGER_DESCRIPTION=Your API Description
SWAGGER_VERSION=1.0.0

# Stripe Payment Integration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_CURRENCY=usd

# Jobs Configuration
# Job: Expirar reservas individuales - tiempo en minutos para expirar una reserva pendiente
BOOKING_EXPIRATION_TIME=10

# Job: Limpiar reservas expiradas (backup) - intervalo en minutos para ejecutar el job
CLEANUP_EXPIRED_BOOKINGS_INTERVAL=5

# Job: Completar eventos pasados - hora del día para ejecutar (formato: HH:mm)
COMPLETE_PAST_EVENTS_TIME=02:00

# Logging Configuration
# LOG_LEVEL: Nivel mínimo de logs a registrar
# Niveles disponibles: error, warn, info, http, verbose, debug, silly
# Producción: info o warn | Desarrollo: debug o http
LOG_LEVEL=info
